<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/detail_ssid"
            style="@style/details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:singleLine="false"
            android:text="@string/ex_ssid" />

        <TextView
            android:id="@+id/item_loc"
            android:visibility="gone"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:singleLine="false" />

        <TextView
            android:id="@+id/item_created_at_human"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:singleLine="false"
            android:textStyle="italic" />

        <LinearLayout
            style="@style/details_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/rating"
                style="@style/details_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GOOD" />

            <TextView
                style="@style/details_box_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some description nobody understands or cares about...Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum. Aliquam dictum enim mauris, eget adipiscing libero ultricies. And even more text so we get a nice scroll to test the shiny pretty scrollview." />
        </LinearLayout>

        <TextView
            style="@style/details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/events_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/details_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bot_count"
                    style="@style/details_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    tools:ignore="HardcodedText" />

                <TextView
                    style="@style/details_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="@string/bot_count" />
            </LinearLayout>

            <LinearLayout
                style="@style/details_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/spam_count"
                    style="@style/details_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    tools:ignore="HardcodedText" />

                <TextView
                    style="@style/details_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spam_count" />
            </LinearLayout>

            <LinearLayout
                style="@style/details_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/unexp_count"
                    style="@style/details_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    tools:ignore="HardcodedText" />

                <TextView
                    style="@style/details_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/unexp_count" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            style="@style/details_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_notification_btn" />
    </LinearLayout>

</ScrollView>