<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cbitlabs.geoipcollector"
    android:versionCode="2"
    android:versionName="1.1"
    android:debuggable="false">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />   
        
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cbitlabs.geoipcollector.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cbitlabs.geoipcollector.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.cbitlabs.geoipcollector.MainActivity">
            <!-- Parent activity meta-data to support API level 4+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cbitlabs.geoipcollector.MainActivity" />
        </activity>

        <receiver android:name="com.cbitlabs.geoipcollector.NetworkStateReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />

            </intent-filter>
        </receiver>
        <service android:name="com.cbitlabs.geoipcollector.ReportIntentService">

        </service>
    </application>

</manifest>
